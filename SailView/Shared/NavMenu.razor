                <MudNavLink Href="/newpyrace" Match="NavLinkMatch.Prefix">New Mixed Design Race</MudNavLink>
            </MudNavGroup>
        </MudNavGroup>

        <MudNavGroup Title="Race Series" Expanded="false">
            <MudNavGroup Title="One Design" Expanded="false">
                <MudNavLink Href="/seriesresults" Match="NavLinkMatch.Prefix">One Design Series List</MudNavLink>
                <MudNavLink Href="/createseries" Match="NavLinkMatch.Prefix">New One Design Series</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Mixed Design" Expanded="false">
                <MudNavLink Href="/mixedresults" Match="NavLinkMatch.Prefix">Mixed Design Series List</MudNavLink>
                <MudNavLink Href="/newmixedseries" Match="NavLinkMatch.Prefix">New Mixed Design Series</MudNavLink>
            </MudNavGroup>
        </MudNavGroup>

        <MudNavLink Href="/weather" Match="NavLinkMatch.Prefix">Weather</MudNavLink>
        <MudNavLink Href="/tides" Match="NavLinkMatch.Prefix">Tides</MudNavLink>
        
    </AuthorizeView>
