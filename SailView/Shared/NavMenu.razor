    <AuthorizeView>
       <MudNavGroup Title="Boats" Expanded="false">
           <MudNavLink Href="/boats" Match="NavLinkMatch.Prefix">Boat List</MudNavLink>
           <MudNavLink Href="/addboats" Match="NavLinkMatch.Prefix">Add Boat</MudNavLink>
            <MudNavLink Href="/results" Match="NavLinkMatch.Prefix">Results History</MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Individual Races" Expanded="false">
